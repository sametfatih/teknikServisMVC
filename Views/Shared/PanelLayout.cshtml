@{
    Layout = null;
}

<!doctype html>
<html class="no-js " lang="en">

<head>
    <style>
        textarea {
            resize: none
        }
    </style>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Teknik Servis Panel">

    <title>@ViewData["Title"]</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="~/assets/panel/image/x-icon">
    <link rel="stylesheet" href="~/assets/panel/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/panel/plugins/select2/select2.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="~/assets/panel/css/style.min.css">
</head>

<body class="theme-blush">

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img class="zmdi-hc-spin" src="~/assets/panel/images/loader.svg" width="48" height="48"
                    alt="Aero"></div>
            <p>Lütfen bekleyin...</p>
        </div>
    </div>

    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>

    <!-- Left Sidebar -->
    <aside id="leftsidebar" class="sidebar">
        <div class="navbar-brand">
            <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
        </div>
        <div class="menu">
            <ul class="list">
                <li style="text-align: -webkit-center;">
                    <div class="user-info" style="inline-size: fit-content">
                        <div class="detail" style="margin-top:1em;margin-bottom:1em;">

                                <h5>Administrator</h5>
                                <small>Yönetici</small>
                        </div>
                    </div>
                </li>

                    <li><a href="/dashboard/"><i class="zmdi zmdi-home"></i><span>Dashboard</span></a></li>
                

                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="zmdi zmdi-file-text"></i><span>
                                Arıza Kayıt
                                İşlemleri
                            </span>
                        </a>
                        <ul class="ml-menu">
                            <li><a href="/fault/newfault">Yeni Arıza Kaydı</a></li>
                            <li><a href="/fault/allfaults">Tüm Arıza Kayıtları</a></li>
                            <li><a href="/fault/processfaults">İşlemdeki Arıza Kayıtları</a></li>
                            <li><a href="/fault/finalizedfaults">Sonuçlanmış Arıza Kayıtları</a></li>

                        </ul>
                    </li>

                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="zmdi zmdi-accounts-list"></i><span>Müşteri İşlemleri</span>
                        </a>
                        <ul class="ml-menu">
                            <li><a href="/customer/allcustomers">Müşteri Listesi</a></li>
                            <li><a href="/customer/createcustomer">Yeni Müşteri Ekle</a></li>
                        </ul>
                    </li>
                
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="zmdi zmdi-settings"></i><span>Servis Ayarları</span>
                        </a>
                        <ul class="ml-menu">
                            <li><a href="/faultStatus/createfaultstatus">Arıza Durumları</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="javascript:void(0);">
                            <i class="zmdi zmdi-chart"></i><span>
                                İstatistikler
                                (Yakında...)
                            </span>
                        </a>
                    </li>
                
            </ul>
        </div>
    </aside>
 <!-- Jquery Core Js -->
    <script src="~/assets/panel/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script src="~/assets/panel/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->

    <script src="~/assets/panel/bundles/mainscripts.bundle.js"></script>
    <!-- Main Content -->

    @RenderBody()
  
</body>

</html>