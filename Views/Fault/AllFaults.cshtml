@{
    ViewData["Title"] = "Tüm Arıza Kayıtları";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}
@model Tuple<object,List<object>,string>

<section class="content">

    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Tüm Arıza Kayıtları</h2>

                    <button class="btn btn-primary btn-icon mobile_menu" type="button">
                        <i class="zmdi zmdi-sort-amount-desc"></i>
                    </button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button">
                        <i class="zmdi zmdi-arrow-right"></i>
                    </button>
                </div>
                <div class="col-sm-4 mb-4">
                    <div class="row">
                        <div class="col-sm-8">
                            <select class="form-control show-tick ms select2" id="arizaDurumFilter" name="RoleName" style="background-color:white!important" data-placeholder="Arıza Durumu Filtresi">
                                <option></option>
                                <option value="islemde">İşlemdeki Arıza Kayıtları</option>
                                <option value="sonuclanmis">Sonuçlanmış Arıza Kayıtları</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <button style="height:38px;margin-top:-0.5px" onclick="Filtrele();" type="submit" class="btn btn-md btn-warning">Filtrele</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="body">
                                <div class="table-responsive">
                                    @await Component.InvokeAsync("DynamicTable",Model)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Jquery DataTable Plugin Js -->
<script src="~/assets/panel/bundles/datatablescripts.bundle.js"></script>
<script src="~/assets/panel/plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
<script src="~/assets/panel/js/pages/tables/jquery-datatable.js"></script>

<script src="~/assets/panel/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script> <!-- Input Mask Plugin Js -->
<script src="~/assets/panel/plugins/select2/select2.min.js"></script> <!-- Select2 Js -->
<script src="~/assets/panel/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
<script src="~/assets/panel/js/pages/forms/advanced-form-elements.js"></script>
<script>
    function Filtrele() {
        let filter = $('#arizaDurumFilter').val();

        if (filter == "sonuclanmis") {
            window.location.href = "/Fault/FinalizedFaults/";
        }
        if (filter == "islemde") {
            window.location.href = "/Fault/ProcessFaults/";
        }
    }
</script>