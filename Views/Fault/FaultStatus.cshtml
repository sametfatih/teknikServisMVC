@using teknikServisMVC.Models.Entities.Concrete;

@{
    Layout = null;
}

@model Ariza;

<!DOCTYPE html>
<html lang="en">


<!-- blank-page14-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Teknik servis uygulaması Selçuk Üniversitesi Teknoloji Fakültesi">
    <meta name="author" content="Shreethemes">

    <link rel="shortcut icon" href="images/favicon.ico">

    <title>Teknik Servis - Arıza Sorgu</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700|Poppins" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="~/assets/user/css/bootstrap.min.css" rel="stylesheet">

    <!-- Magnificpopup Css -->
    <link rel="stylesheet" type="text/css" href="~/assets/user/css/magnific-popup.css">

    <!-- Bootstrap core CSS -->
    <link href="~/assets/user/css/materialdesignicons.min.css" rel="stylesheet">
    <link href="~/assets/user/css/fontawesome.css" rel="stylesheet">
    <link href="~/assets/user/css/pe-icon-7-stroke.css" rel="stylesheet">

    <!--Slider-->
    <link rel="stylesheet" href="~/assets/user/css/slick.css" />
    <link rel="stylesheet" href="~/assets/user/css/slick-theme.css" />

    <!-- Custom styles for this template -->
    <link href="~/assets/user/css/style.css" rel="stylesheet">
    <link href="~/assets/user/css/menu.css" rel="stylesheet">
    <link href="~/assets/user/css/default.css" rel="stylesheet">

</head>

<body>
    <!-- Loader -->
    <div id="preloader">
        <div id="status">
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
        </div>
    </div>


   
    <!-- End Navigation Bar-->
    <!-- HOME START-->
    <section class="bg-half" style="background-image: url('/assets/user/images/home/bg-pages.jpg');padding-top:100px;padding-bottom:100px;">
        <div class="home-center">
            <div class="home-desc">
                <div class="container">
                    <div style="margin-bottom: 30px;" class="row">
                        <div style="display:flex;" class="col-md-6">
                            <div style="inline-size:-webkit-fill-available;" class="bg-white p-30 rounded box-shadow">
                                <h5 class="form-title mb-4 text-center font-weight-bold">Sorgu Sonucu</h5>

                                <div>
                                    <label for="sorguNo">Sorgu Numarası</label>
                                    <input disabled name="sorguNo" class="form-control" type="text" value="@Model.ArizaTakipNumarasi">
                                    <br>
                                    <label for="sorguDurum">Sorgu Durumu</label>
                                    <input disabled name="sorguDurum" class="form-control" type="text" value="@Model.ArizaDurumu.Ad">
                                    <br>
                                    <label for="sorguDesc">Açıklama</label>
                                    <textarea disabled style="resize:none;height: 100px;" name="sorguDesc" rows="3" class="form-control">@Model.Aciklama</textarea>
                                </div>
                            </div>
                        </div>
                        <div style="display:flex;" class="col-md-6">
                            <div style="inline-size:-webkit-fill-available;" class="bg-white p-30 rounded box-shadow">
                                <h5 class="form-title mb-4 text-center font-weight-bold">Müşteri Bilgileri</h5>
                                <div>
                                    <label for="NameSurname">Ad Soyad</label>
                                    <input disabled name="NameSurname" class="form-control" type="text" value="@Model.Musteri.Ad @Model.Musteri.Soyad">
                                    <br>
                                    <label for="Phone">Telefon Numarası</label>
                                    <input disabled name="Phone" class="form-control" type="text" value="@Model.Musteri.Iletisim.TelefonNumarasi">
                                    <br>
                                    <label for="Email">E-posta</label>
                                    <input disabled name="Email" class="form-control" type="text" value="@Model.Musteri.Iletisim.Eposta">
                                    <br>
                                    <label for="Address">Adres</label>
                                    <textarea disabled style="resize:none;height: 100px;" name="Address" class="form-control">@Model.Musteri.Adres.CaddeAdres @Model.Musteri.Adres.Sehir/@Model.Musteri.Adres.Ulke</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div style="display:flex;" class="col-md-6">
                            <div style="inline-size:-webkit-fill-available;" class="bg-white p-30 rounded box-shadow">
                                <h5 class="form-title mb-4 text-center font-weight-bold">Servis Durumu</h5>

                                <div>
                                    <label for="deliveryTime">Tahmini Teslim Süresi</label>
                                    <input disabled value="Mevcut Değil" name="deliveryTime" id="name" class="form-control" type="text">
                                    <br>
                                    <label for="cargoDate">Kargoya Verilme Tarihi</label>
                                    <input disabled value="Mevcut Değil" name="cargoDate" id="name" class="form-control" type="text">
                                    <br>
                                    <label for="CargoComp">Kargo Şirketi</label>
                                    <input disabled value="Mevcut Değil" name="CargoComp" id="name" class="form-control" type="text">
                                    <br>
                                    <label for="trackingNo">Takip Numarası</label>
                                    <input disabled name="trackingNo" value="@Model.ArizaTakipNumarasi" id="name" class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                        <div style="display:flex;" class="col-md-6">
                            <div style="inline-size:-webkit-fill-available;" class="bg-white p-30 rounded box-shadow">
                                <h5 class="form-title mb-4 text-center font-weight-bold">Cihaz Bilgileri</h5>

                                <div>
                                    <label for="Brand">Marka</label>
                                    <input disabled name="Brand" value="@Model.Cihaz.Marka" id="name" class="form-control" type="text">
                                    <br>
                                    <label for="Model">Model</label>
                                    <input disabled name="Model" value="@Model.Cihaz.Model" id="name" class="form-control" type="text">
                                    <br>
                                    <label for="serialNumber">Seri Numarası</label>
                                    <input disabled name="serialNumber" value="@Model.Cihaz.SeriNumarasi" id="name" class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="margin-top:3%;text-align: -webkit-center;" class="container">
                    <div style="text-align:center"><h2 style="z-index: 9999;color:white"><b>CİHAZ GÖRÜNTÜLERİ</b></h2></div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:60%;">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="https://productimages.hepsiburada.net/s/484/1500/110000528997649.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://productimages.hepsiburada.net/s/477/500/110000519908000.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://productimages.hepsiburada.net/s/477/500/110000519908001.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- HOME END-->

    <!-- Back to top -->
    <a href="#" class="back-to-top" id="back-to-top">
        <i class="mdi mdi-chevron-up"> </i>
    </a>
    <!-- Back to top -->
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/assets/user/js/jquery.min.js"></script>
    <script src="~/assets/user/js/popper.min.js"></script>
    <script src="~/assets/user/js/bootstrap.min.js"></script>
    <!-- Portfolio -->
    <script src="~/assets/user/js/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/user/js/isotope.js"></script>
    <!-- Carousel -->
    <script src="~/assets/user/js/slick.min.js"></script>
    <script src="~/assets/user/js/slick.init.js"></script>
    <!--custom script-->
    <script src="~/assets/user/js/app.js"></script>

</body>


<!-- blank-page14-->
</html>