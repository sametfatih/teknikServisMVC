@using teknikServisMVC.APIs.External_Services.Turkey_Province_Service.Service_Client;
@using teknikServisMVC.Models.Entities.Concrete;

@{
    ViewData["Title"] = "Müşteri Güncelle";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

@model Musteri

<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Müşteri Güncelle</h2>

                    <button class="btn btn-primary btn-icon mobile_menu" type="button">
                        <i class="zmdi zmdi-sort-amount-desc"></i>
                    </button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button">
                        <i class="zmdi zmdi-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="body">
                            <form action="/Customer/Update" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input value="@Model.Ad" type="text" class="form-control" name="Ad" placeholder="Ad">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input value="@Model.Soyad" type="text" class="form-control" name="Soyad" placeholder="Soyad">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="input-group masked-input mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="zmdi zmdi-smartphone"></i>
                                                    </span>
                                                </div>
                                                <input value="@Model.Iletisim.TelefonNumarasi" type="text" asp-for="Iletisim.TelefonNumarasi" class="form-control mobile-phone-number"
                                                       placeholder="Tel: +90 (000) 000-00-00">
                                            </div>
                                        </div>
                                    </div>
                                </div><div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <select class="form-control show-tick ms select2" asp-for="Adres.Sehir" data-placeholder="Şehir">
                                                <option>@Model.Adres.Sehir</option>
                                                @foreach (var item in ServiceClient.GetProvinces())
                                                {
                                                <option value="@item.Name">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input value="@Model.Adres.PostaKodu" type="text" asp-for="Adres.PostaKodu" class="form-control"
                                                   placeholder="Posta Kodu">
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <input type="text" value="@Model.Adres.CaddeAdres" asp-for="Adres.CaddeAdres" class="form-control"
                                                   placeholder="Adres">
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="input-group masked-input mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="zmdi zmdi-email"></i></span>
                                            </div>
                                            <input type="text" value="@Model.Iletisim.Eposta" asp-for="Iletisim.Eposta" class="form-control email"
                                                   placeholder="Email: örnek@teknikservis.com">
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-block btn-lg btn-info">Müşteri Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<script>

    document.addEventListener("DOMContentLoaded", function () {
        const addButton = document.querySelector(".btn-info"); // Altta bulunan butonun sınıfını kullanarak seçiyoruz
        const firstForm = document.querySelector("form:first-child"); // İlk formu seçiyoruz

        addButton.addEventListener("click", function (e) {
            e.preventDefault(); // Sayfanın yeniden yüklenmesini engelliyoruz
            firstForm.submit(); // İlk formu gönderiyoruz
        });
    });

</script>



<script src="~/assets/panel/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script> <!-- Input Mask Plugin Js -->
<script src="~/assets/panel/plugins/select2/select2.min.js"></script> <!-- Select2 Js -->
<script src="~/assets/panel/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
<script src="~/assets/panel/js/pages/forms/advanced-form-elements.js"></script>
